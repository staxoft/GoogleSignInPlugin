<Project Sdk="MSBuild.Sdk.Extras/2.0.54">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;MonoAndroid90;Xamarin.iOS10;</TargetFrameworks>
        <AssemblyName>GoogleSignInPlugin</AssemblyName>
        <RootNamespace>E_Token.GoogleSignInPlugin</RootNamespace>
        <PackageId>XamarinGoogleClientPlugin</PackageId>
        <Product>Google Sign In Plugin</Product>
        <AssemblyVersion>1.0.0.0</AssemblyVersion>
        <AssemblyFileVersion>1.0.0.0</AssemblyFileVersion>
        <Version>1.0.0.0</Version>
        <PackOnBuild>true</PackOnBuild>
        <NeutralLanguage>en</NeutralLanguage>
        <LangVersion>default</LangVersion>
        <DefineConstants>$(DefineConstants);</DefineConstants>
        <UseFullSemVerForNuGet>false</UseFullSemVerForNuGet>
        <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

        <LangVersion>latest</LangVersion>
        <PackageLicense>MIT</PackageLicense>
        <PackageProjectUrl>https://github.com/stefkaptein/GoogleSignInPlugin</PackageProjectUrl>
        <RepositoryUrl>https://github.com/stefkaptein/GoogleSignInPlugin</RepositoryUrl>
        <PackageIconUrl></PackageIconUrl>
        <PackageTags>xamarin, ios, android, xamarin.forms, plugin, google client, authentication, google</PackageTags>

        <Title>Google Sign in Plugin for Xamarin</Title>
        <Summary>Google authentication handling across Xamarin.iOS and Xamarin.Android using firebase</Summary>
        <Description>The sign in plugin allows for authentication handling across Xamarin.iOS and Xamarin.Android using firebase. </Description>
        <PackageReleaseNotes></PackageReleaseNotes>
        <Authors>Stef Kaptein, Alex Jeleniewski</Authors>
        <Owners>Stef Kaptein, Alex Jeleniewski</Owners>
        <Copyright>Copyright 2020</Copyright>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageVersion>1.0.0.0</PackageVersion>
    </PropertyGroup>


    <!-- Define what happens on build and release -->
    <PropertyGroup Condition=" '$(Configuration)'=='Debug' ">
        <DebugType>full</DebugType>
        <DebugSymbols>true</DebugSymbols>
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)'=='Release' ">
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <DebugType>pdbonly</DebugType>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <PropertyGroup>
        <NoWarn>1701;1702;1591</NoWarn>
        <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\Plugin.GoogleSignIn.xml</DocumentationFile>
        <Company>E-Token</Company>
        <OutputType>Library</OutputType>
        <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="**\*.shared.cs" />
        <Compile Include="**\*.shared.*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
    </ItemGroup>


    <ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
        <PackageReference Include="Xamarin.GooglePlayServices.Auth" Version="118.0.0" />
        <PackageReference Include="Xamarin.GooglePlayServices.Basement" Version="117.2.1" />
        <PackageReference Include="Xamarin.GooglePlayServices.Tasks" Version="117.0.2" />
        <PackageReference Include="Xamarin.Build.Download" Version="0.10.0" />
        <PackageReference Include="Xamarin.AndroidX.Lifecycle.LiveData" Version="2.1.0.1" />
        <PackageReference Include="Xamarin.AndroidX.Browser" Version="1.0.0.1" />
        <PackageReference Include="Xamarin.Google.Android.Material" Version="1.0.0.1" />
        <PackageReference Include="Xamarin.AndroidX.Legacy.Support.V4" Version="1.0.0.1" />
        <PackageReference Include="Xamarin.AndroidX.MediaRouter" Version="1.1.0.1" />
        <Compile Include="**\*.android.cs" />
        <Compile Include="**\*.android.*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
        <PackageReference Include="Xamarin.Google.iOS.SignIn" Version="5.0.2.1" />
        <PackageReference Include="Xamarin.Firebase.iOS.Core" Version="6.10.4" />
        <PackageReference Include="Xamarin.Build.Download" Version="0.10.0" />
        <Compile Include="**\*.apple.cs" />
        <Compile Include="**\*.apple.*.cs" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Xamarin.Forms" Version="4.8.0.1560" />
    </ItemGroup>
</Project>
